<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@android:color/darker_gray"
        android:gravity="end"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="16dp"/>

    <EditText
        android:id="@+id/alasEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultTextView"
        android:layout_margin="16dp"
        android:hint="Masukkan panjang alas"
        android:inputType="number"/>

    <EditText
        android:id="@+id/tinggiEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alasEditText"
        android:layout_margin="16dp"
        android:hint="Masukkan tinggi"
        android:inputType="number"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tinggiEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Hitung Luas"
        android:onClick="hitungLuas"/>

</RelativeLayout>
